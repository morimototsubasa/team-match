<div class="container">
  <div class="row mt-5">
    <h2>マイページ</h2>
    <table class="table">
      <tr>
        <th>登録情報</th>
        <td><%= link_to "編集する", edit_customer_path(current_customer) %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @name%></td>
      </tr>
      <tr>
        <th>学校名</th>
        <td><%= @school_name %></td>
      </tr>
      <tr>
        <th>その他</th>
        <td><%= @customer.comment %></td>
      </tr>
    </table>
    <button type="button" class="btn btn-success">
      <%= link_to "ブックマーク一覧へ", customer_favorites_path(@customer) %>
    </button>
    <button type="button" class="btn btn-primary ml-5">
      <%= link_to "DM一覧へ", rooms_path(@room) %>
    </button>
  </div>
  <div class="row mt-5">
    <h3>募集履歴</h3>
  </div>
</div>