<div class="container col-md-5 mt-5">
  <div class="row">
    <div class="center-block">
      <h2>募集内容編集ページ</h2>
    </div>
  </div>
  <div class="row">
    <%= form_with model:@recruit,url:recruit_path,local:true do |f| %>
        <% if @recruit.errors.any? %>
        <%= @recruit.errors.count %>件のエラーが発生しました
        <ul>
          <% @recruit.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
    <table class="table">
      <tbody>
        <tr>
          <th>顧問氏名</th>
          <td><%= f.text_field :name, class: "form-control" %></td>
        </tr>
        <tr>
          <th>学校名</th>
          <td><%= f.text_field :school_name, class: "form-control" %></td>
        </tr>
        <tr>
          <th>募集日時</th>
          <td><%= f.text_area :recruit_text, autofoucs: true, id:"InputRecruitDate1m", placeholder:"募集開始日から１ヶ月以内を指定してください" %></td>
        </tr>
        <tr>
          <th>種目</th>
          <td><%= f.collection_select :genre_id, Genre.all ,:id, :genre, include_blank: "--選択してください--" %></td>
        </tr>
         <tr>
          <th>募集する都道府県</th>
          <td><%= f.collection_select :city_id, City.all ,:id, :city, include_blank: "--選択してください--" %></td>
        </tr>
      </tbody>
    </table>
    <div class="text-center">
      <%= f.submit "更新" , class: "btn btn-primary pull-right mr-3",data: { confirm: '更新しますか？'} %>
      <%= link_to "削除",recruit_path(@recruit), data: { confirm: '本当に削除しますか？'}, method: :delete %>
    </div>
    <% end %>
  </div>
</div>