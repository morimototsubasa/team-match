<h2>募集内容編集ページ</h2>
  <%= form_with model:@recruit,url:recruit_path,local:true do |f| %>
<table class="table">

  <tbody>
    <tr>
      <th>顧問氏名</th>
      <td><%= f.text_field :name, class: "form-control" %></td>
    </tr>
    <tr>
      <th>学校名</th>
      <td><%= f.text_field :school_name, class: "form-control" %></td>
    </tr>
    <tr>
      <th>募集日時</th>
      <td><%= f.text_area :recruit_text, autofoucs: true, id:"InputRecruitDate1m", placeholder:"募集開始日から１ヶ月以内を指定してください" %></td>
    </tr>
    <tr>
      <th>種目</th>
      <td><%= f.collection_select :genre_id, Genre.all ,:id, :genre, include_blank: "--選択してください--" %></td>
    </tr>
     <tr>
      <th>募集する都道府県</th>
      <td><%= f.collection_select :city_id, City.all ,:id, :city, include_blank: "--選択してください--" %></td>
    </tr>
  </tbody>
</table>
<%= f.submit "更新" , class: "btn btn-primary pull-right" %>
<%= link_to "削除",recruit_path(@recruit), method: :delete %>
<% end %>