<div class="container mt-5 col-md-3">
  <div class="row">
    <div class="center-block">
      <h2>新規募集ページ</h2>
    </div>
  </div>
<div class="row">
  <%= form_with model:@recruit,url:recruits_path,local:true do |f| %>
    <% if @recruit.errors.any? %>
    <%= @recruit.errors.count %>件のエラーが発生しました
    <ul>
      <% @recruit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
  <table class="table">
    <tbody>
      <tr>
        <th>学校名</th>
        <td><%= f.text_field :school_name %></td>
      </tr>
      <tr>
        <th>顧問氏名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>募集日時(複数選択可）</th>
        <td><%= f.text_area :recruit_text, autofoucs: true, id:"InputRecruitDate1m", placeholder:"例:2022/3/4 3/5 3/6" %></td>
      </tr>
      <tr>
        <th>種目</th>
        <td><%= f.collection_select :genre_id, Genre.all ,:id, :genre, include_blank: "--選択してください--" %></td>
      </tr>
      <tr>
        <th>募集する都道府県</th>
        <td><%= f.collection_select :city_id, City.all ,:id, :city, include_blank: "--選択してください--" %></td>
      </tr>
    </tbody>
  </table>
  <div class="text-center">
    <%= f.submit "新規登録", data: { confirm: '募集は１ヶ月で自動的に削除されます'}, class: "btn btn-primary pull-right" %>
  </div>
  <% end %>
</div>
</div>
