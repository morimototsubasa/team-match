<h2>新規募集ページ</h2>
<%= form_with model:@recruit,url:new_recruit_path,local:true do |f| %>
<table class="table">
  <tbody>
    <tr>
      <th>学校名</th>
      <td><%= f.text_field :school_name, class: "form-control" %></td>
    </tr>
    <tr>
      <th>顧問氏名</th>
      <td><%= f.text_field :name, class: "form-control" %></td>
    </tr>
    <tr>
      <th>募集日時</th>
      <td><%= f.text_area :recruit_text %></td>
    </tr>
    <tr>
      <th>種目</th>
      <td><%= f.collection_select :genre_id, Genre.all ,:id, :genre, include_blank: "--選択してください--" %></td>
    </tr>
  </tbody>
</table>
<%= f.submit "新規登録" , class: "btn btn-primary pull-right" %>
<% end %>