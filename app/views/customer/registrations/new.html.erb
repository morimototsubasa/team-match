<div class="container mt-5 col-md-3">
  <div class="row">
    <div class="centere-block">
      <h2>新規会員登録</h2>
    </div>
  </div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if @customer.errors.any? %>
        <%= @customer.errors.count %>件のエラーが発生しました
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    　<div class="field">
    　  <%= f.label :name,"氏名" %><br>
    　  <%= f.text_field :name %>
    　</div>

    　<div class="field">
    　  <%= f.label :name_kana, "氏名（カナ）" %><br>
    　  <%= f.text_field :name_kana %>
    　</div>

    　<div class="field">
    　  <%= f.label :phone_number, "電話番号" %><br>
    　  <%= f.text_field :phone_number %>
    　</div>

    　<div class="field">
    　  <%= f.label :school_name,"学校名" %><br>
    　  <%= f.text_field :school_name %>
    　</div>

      <div class="field ml-4">
        <%= f.label :email,"email"%><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field ml-4">
        <%= f.label :password %><br>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field ml-4">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions text-center mt-3">
        <%= f.submit "登録" %>
      </div>
    <% end %>
  </div>
</div>
